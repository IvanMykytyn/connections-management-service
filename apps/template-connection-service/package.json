{
    "name": "SOMETHING-connection-service",
    "version": "1.0.0",
    "main": "build/src/server.js",
    "private": true,
    "scripts": {
        "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
        "build": "tsoa spec-and-routes && tsc --outDir build --experimentalDecorators && yarn copy-files",
        "prebuild": "rimraf build",
        "start": "node build/src/server.js",
        "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
        "copy-files": "copyfiles src/public/**/*.html src/public/**/*.css src/public/**/*.svg src/views/**/*.ejs build/"
    },
    "dependencies": {
        "axios": "^1.4.0",
        "core": "*",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "ejs": "^3.1.9",
        "express": "^4.18.2",
        "express-logger": "*",
        "express-partials": "^0.3.0",
        "firebase-admin": "^11.5.0",
        "helmet": "^7.0.0",
        "swagger-ui-express": "^5.0.0",
        "tsconfig": "*",
        "tsoa": "^5.1.1",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/express-partials": "^0.0.32",
        "@types/node": "^18.14.6",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/uuid": "^9.0.1",
        "concurrently": "^7.6.0",
        "copyfiles": "^2.4.1",
        "eslint-config-custom": "*",
        "nodemon": "^2.0.21",
        "rimraf": "^5.0.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    }
}
